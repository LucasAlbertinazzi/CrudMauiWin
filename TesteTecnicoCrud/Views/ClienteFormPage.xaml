<ContentPage
    x:Class="TesteTecnicoCrud.Views.ClienteFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Cliente">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry Placeholder="Name" Text="{Binding Name}" />
        <Entry Placeholder="Lastname" Text="{Binding Lastname}" />
        <Entry
            Keyboard="Numeric"
            Placeholder="Age"
            Text="{Binding Age}" />
        <Entry Placeholder="Address" Text="{Binding Address}" />

        <HorizontalStackLayout Spacing="8">
            <Button Command="{Binding CancelCommand}" Text="Cancelar" />
            <Button Command="{Binding SaveCommand}" Text="Salvar" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
